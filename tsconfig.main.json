{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "./dist/main",
    "lib": ["ES2022"],
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "./dist/main/.tsbuildinfo"
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/renderer/**/*"
  ]
}